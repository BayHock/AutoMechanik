@using AutoMechanikCore.Models.Dtos.Account
@model RegisterDto
@{
	ViewData["Title"] = "Register";
}

<form id="registerForm" asp-action="Register" asp-controller="Account" method="post">
	<h2>Create a new account.</h2>
	<hr />
	<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
	<div class="form-floating mb-3">
		<input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
		<label asp-for="Email">Email</label>
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	<div class="form-floating mb-3">
		<input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
		<label asp-for="Password">Password</label>
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<div class="form-floating mb-3">
		<button type="button" onclick="selectRole('Client')">Клиент</button>
		<button type="button" onclick="selectRole('AutoService')">Автосервис</button>
		<input asp-for="Role" type="hidden" id="selectedRole" />
		<span asp-validation-for="Role"></span>
	</div>
	<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Зарегистрироваться</button>
</form>



@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script>
		function selectRole(role) {
			document.getElementById('selectedRole').value = role;
			console.log('Выбрана роль: ' + role);
		}
	</script>
}